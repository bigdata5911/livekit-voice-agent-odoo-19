<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Action to open voice chat widget -->
    <record id="action_voice_chat" model="ir.actions.client">
        <field name="name">Voice Chat</field>
        <field name="tag">voice_widget</field>
    </record>
    
    <!-- Voice Chat Menu -->
    <menuitem id="menu_voice_chat" 
              name="Voice Chat" 
              action="odoo_plugin.action_voice_chat"
              sequence="100"/>
</odoo>
